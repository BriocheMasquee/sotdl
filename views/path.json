{
    "debug": false,
    "spacing": 0,
    "padding": [15],
    "views": [
        {
            "type": "hStack",
            "alignment": "bottom",
            "padding": [0,5],
            "views": [
                {
                    "style": "entityTitle",
                    "value": "**{{name}}**",
                    "link": "https://www.google.com/search?tbm=isch&q=Shadow+of+the+Demon+Lord+{{name}}"
                }
            ]
        },
        {
            "type": "divider",
            "bgColor": "#000000",
            "height": 2.5,
            "padding": [0]
        },
        {
            "type": "spacer"
        },
        {
            "type": "text",
            "value": "{{descr}}"
        },
        {
            "type": "spacer"
        },
        {
            "type": "partial",
            "value": "path-novice",
            "visibleIf": "{% if data.pathType == 'Novice' %}true{% endif %}"
        },
        {
            "type": "partial",
            "value": "path-expert",
            "visibleIf": "{% if data.pathType == 'Expert' %}true{% endif %}"
        },
        {
            "type": "partial",
            "value": "path-master",
            "visibleIf": "{% if data.pathType == 'Master' %}true{% endif %}"
        },
        {
            "type": "partial",
            "value": "path-other",
            "visibleIf": "{% if data.other %}true{% endif %}"
        },        
        {
            "type": "vStack",
            "padding": [5,5,0,5],
            "views": [
                {
                    "type": "list",
                    "attribute": "data.talent",
                    "views": [
                        {
                            "type": "text",
                            "style": "body-info",
                            "value": "{% if name %}**{{name}}.** {% endif %}{{text}}"
                        }
                    ]
                }
            ]
        },
        {
            "type": "spacer"
        },
        {
            "type": "spacer",
            "visibleIf": "{{image}}"
        },
        {
            "type": "image",
            "value": "{{image}}",
            "link": "{{image}}"
        },
        {
            "type": "spacer"
        },
        {
            "type": "divider",
            "bgColor": "#000000",
            "height": 1.5,
            "padding": [0]
        },
        {
          "type": "text",
          "style": "source",
          "padding": [5,0,0,0],
          "value": "*{{'Common.Source'|l}} : {{sourceFormatted}}*",
          "visibleIf": "{{sourceFormatted}}"
        }
    ]
}