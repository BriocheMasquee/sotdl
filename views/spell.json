{
    "debug": false,
    "spacing": 0,
    "padding": [15],
    "views": [
        {
            "type": "hStack",
            "alignment": "bottom",
            "padding": [0,5],
            "views": [
                {
                    "style": "spellTitle",
                    "value": "**{{name}}**"
                },
                {
                    "type": "image",
                    "value": "/icons/tradition/darkmagic.png",
                    "height": 20,
                    "custom": {
                        "renderingMode": "original"
                    },
                    "visibleIf": "{{data.spellTradition.darkMagic == true}}"
                },
                {
                    "type": "image",
                    "value": "/icons/tradition/psychic.png",
                    "height": 20,
                    "custom": {
                        "renderingMode": "original"
                    },
                    "visibleIf": "{{data.spellTradition.psychicTradition == true}}"
                },
                {
                    "type": "image",
                    "value": "/icons/tradition/incantation.png",
                    "height": 20,
                    "custom": {
                        "renderingMode": "original"
                    },
                    "visibleIf": "{{data.spellTradition.onlyIncantation == true}}"
                },
                {
                    "style": "spellSubtitle",
                    "alignment": "trailing",
                    "width": -1,
                    "value": "{% if data.spellTradition %}**{{data.spellTradition.tradition|map: 'SpellTradition'}}**{% endif %} â€¢ {% if data.spellType %}**{{data.spellType|map: 'SpellType'}}**{% endif %}{% if data.spellRank or data.spellRank == 0 %} **{{data.spellRank}}**{% endif%}"
                }
            ]
        },
        {
            "type": "divider",
            "bgColor": "#000000",
            "height": 2.5,
            "padding": [0]
        },
        {
            "type": "spacer"
        },
        {
            "type": "vStack",
            "padding": [0,5],
            "views": [
                {
                    "type": "text",
                    "style": "body-info",
                    "value": "**{{'Spell.Requirement'|l}}.** {{data.spellRequirement}}",
                    "visibleIf": "{{data.spellRequirement}}"
                },
                {
                    "type": "text",
                    "style": "body-info",
                    "value": "**{{'Spell.Target'|l}}.** {{data.spellTarget}}",
                    "visibleIf": "{{data.spellTarget}}"
                },
                {
                    "type": "text",
                    "style": "body-info",
                    "value": "**{{'Spell.Area'|l}}.** {{data.spellArea}}",
                    "visibleIf": "{{data.spellArea}}"
                },
                {
                    "type": "text",
                    "style": "body-info",
                    "value": "**{{'Spell.Duration'|l}}.** {{data.spellDuration}}",
                    "visibleIf": "{{data.spellDuration}}"
                }
            ]
        },
        {
            "type": "spacer",
            "visibleIf": "{{data.spellRequirement or data.spellTarget or data.spellArea or data.spellDuration}}"
        },
        {
            "type": "divider",
            "bgColor": "#9B0619",
            "height": 2,
            "padding": [0],
            "visibleIf": "{{data.spellRequirement or data.spellTarget or data.spellArea or data.spellDuration}}"
        },
        {
            "type": "spacer",
            "visibleIf": "{{data.spellRequirement or data.spellTarget or data.spellArea or data.spellDuration}}"
        },
        {
            "type": "vStack",
            "padding": [0,5],
            "views": [
                {
                    "type": "text",
                    "style": "body-info",
                    "value": "{{descr}}"
                },
                {
                    "type": "list",
                    "attribute": "data.spellEffects",
                    "views": [
                        {
                            "type": "text",
                            "style": "body-info",
                            "value": "{% if name %}**{{name}}.** {% endif %}{{text}}"
                        }
                    ]
                }
            ]
        },
        {
            "type": "spacer"
        },
        {
            "type": "divider",
            "bgColor": "#000000",
            "height": 1.5,
            "padding": [0]
        },
        {
          "type": "text",
          "style": "source",
          "padding": [5,0,0,0],
          "value": "*{{'Common.Source'|l}} : {{sourceFormatted}}*",
          "visibleIf": "{{sourceFormatted}}"
        }
    ]
}