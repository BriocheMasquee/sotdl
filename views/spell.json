{
  "debug": false,
  "spacing": 0,
  "padding": [
    20
  ],
  "views": [
    {
      "type": "hStack",
      "views": [
        {
          "type": "text",
          "style": "entityTitle",
          "value": "**{{name|uppercase}}**"
        },
        {
          "style": "entitySubtitle",
          "value": "{% if data.spellTradition %}**{{data.spellTradition|map: 'SpellTradition'|uppercase}}**{% endif %} â€¢ {% if data.spellType %}**{{data.spellType|map: 'SpellType'|uppercase}}**{% endif %} **{{data.spellRank|uppercase}}**",
          "alignment": "trailing"
        }
      ]
    },
    {
      "type": "divider",
      "bgColor": "#000000",
      "height": 2.5,
      "padding": [
        0
      ]
    },
    {
      "type": "spacer",
      "visibleIf": "{% if data.spellOptions or data.spellDuration or data.spellEffects %}true{% endif %}"
    },
    {
      "type": "vStack",
      "padding": [
        8
      ],
      "views": [
        {
          "type": "list",
          "attribute": "data.spellOptions",
          "views": [
            {
              "type": "text",
              "style": "sotdlbody",
              "value": "{% if name %}**{{name}}.**{% endif %} {{text}}"
            }
          ]
        },
        {
          "type": "text",
          "style": "sotdlbody",
          "value": "{% if data.spellDuration %}**{{'Spell.Duration'|l}}.**{% endif %} {{data.spellDuration}}",
          "visibleIf": "{% if data.spellDuration %}true{% endif %}"
        }
      ]
    },
    {
      "type": "divider",
      "bgColor": "#9B0619",
      "visibleIf": "{% if data.spellOptions or data.spellDuration or data.spellEffects %}true{% endif %}",
      "height": 1.5,
      "padding": [
        0
      ]
    },
    {
      "type": "spacer",
      "visibleIf": "{% if data.spellOptions or data.spellDuration or data.spellEffects %}true{% endif %}"
    },
    {
      "type": "vStack",
      "padding": [
        8
      ],
      "views": [
        {
          "type": "text",
          "style": "sotdlbody",
          "value": "{{descr}}"
        },
        {
          "type": "list",
          "attribute": "data.spellEffects",
          "views": [
            {
              "type": "text",
              "style": "sotdlbody",
              "value": "{% if name %}**{{name}}.**{% endif %} {{text}}"
            }
          ]
        }
      ]
    },
    {
      "type": "spacer"
    },
    {
      "type": "divider",
      "bgColor": "#000000",
      "height": 1.5,
      "padding": [
        0
      ]
    },
    {
      "type": "vStack",
      "padding": [
        8,
        0
      ],
      "views": [
        {
          "type": "text",
          "style": "sourceText",
          "value": "{{footer}}"
        }
      ]
    }
  ]
}